.popup-img {
  width: 100%;
  text-align: center;
}

.popup-btn {
  margin: 50rpx 0;
  width: 100%;
}

.popup-btn button {
  width: 80%;
  margin: 0 auto;
}
.popup-card{
  position: relative;
  width: 624rpx;
  height: 394rpx;
  margin: 0 auto;
  padding: 10rpx;
  box-sizing: border-box;
  color: #eee;
  background-color: #323232;
  border-radius: 20rpx;
}
.popup-bank-logo{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width:100%;
  height:120rpx
}
.popup-bank-logo .van-skeleton{
  height: 60px;
  align-items: center;
}
.popup-bank-logo .van-skeleton__content{
  padding: 0!important;
}
.popup-bank-logo .van-skeleton__title{
  padding-top: 0;
  height: 20px;
}
.popup-card-footer{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  flex-direction:row;
  padding: 0 10%;
  align-items: center;
  box-sizing: border-box;
  justify-content: space-between;
}
.popup-card-org{
  width: 40%;
  height: 60px;
  text-align: center;

}
.popup-card-org .van-skeleton{
  padding-top: 10px;
}
.popup-card-org .van-skeleton__title{
  height: 30px;
}

.popup-card-num{
  padding-top: 40rpx;
  padding-left: 50rpx;
  width: 100%;
  font-size: 46rpx;
  letter-spacing: 4rpx;
}
.popup-card-billday{
  font-size: 12px;
}
.card-box .card-item{
  box-shadow: 5px 5px 20px aliceblue;
  margin-top:-120px;
  transition: transform 0.5S;
}
.card-item:nth-child(1){
  margin-top: 0!important;
  transform: translateY(0);
}
.card-card-num{
  display: inline-block;
  padding-right: 20rpx;
  font-size: 20rpx;
  color: #e3e3e3;
}
.card-item-active{
  transform: translateY(-10px);
  z-index: 99;
}
.banner-box{
  width: 92%;
  height: 180px;
  position: relative;
  margin: 20rpx auto;
}
.banner-box image{

  width: 100%;
  height: 180px;
  border-radius: 20rpx;
}
.banner-day{
  font-size: 48rpx;
  color: #ffffff;
  position: absolute;
  top: 60rpx;
  left: 60rpx;
}
.banner-day-num{
  font-size: 88rpx;
}
.banner-account{
  margin-top: 30rpx;
  font-size: 30rpx;
}
.card-list-title {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin: 20rpx 5%;
  padding-bottom: 30rpx;

}

.card-title-name {
  font-size: 40rpx;
  font-weight: 600;
}

.card-title-more {
  font-size: 24rpx;
  color: #abb0bf;
}