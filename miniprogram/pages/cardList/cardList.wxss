.popup-img {
  width: 100%;
  text-align: center;
}

.popup-btn {
  margin: 50rpx 0;
  width: 100%;
}

.popup-btn button {
  width: 80%;
  margin: 0 auto;
}

.popup-card {
  position: relative;
  width: 624rpx;
  height: 394rpx;
  margin: 0 auto;
  padding: 10rpx;
  box-sizing: border-box;
  color: #eee;
  background-color: #323232;
  border-radius: 20rpx;
}

.popup-bank-logo {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 120rpx
}

.popup-bank-logo .van-skeleton {
  height: 60px;
  align-items: center;
}

.popup-bank-logo .van-skeleton__content {
  padding: 0 !important;
}

.popup-bank-logo .van-skeleton__title {
  padding-top: 0;
  height: 20px;
}

.popup-card-footer {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  padding: 0 10%;
  align-items: center;
  box-sizing: border-box;
  justify-content: space-between;
}

.popup-card-org {
  width: 40%;
  height: 60px;
  text-align: center;

}

.popup-card-org .van-skeleton {
  padding-top: 10px;
}

.popup-card-org .van-skeleton__title {
  height: 30px;
}

.popup-card-num {
  padding-top: 40rpx;
  padding-left: 50rpx;
  width: 100%;
  font-size: 46rpx;
  letter-spacing: 4rpx;
}

.popup-card-billday {
  font-size: 12px;
}

.card-box .card-item {
  background-color: #ffffff;
  box-shadow: 0 5px 10px #eee;
  height: 200rpx;
  width: 90%;
  margin: 0 auto 40rpx auto;
  border-radius: 20rpx;
}

.card-box .card-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 20rpx;
  padding: 25rpx 0;
  border-bottom: 1px solid #f5f5f5;
}

.card-info-left {
  display: flex;
  align-items: center;
  width: 70%;
  font-size: 28rpx;
}

.card-info-name {
  padding-left: 20rpx;
}

.card-info-left .card-num {
  font-size: 24rpx;
}
.card-info-other{
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
  padding: 20rpx 0;
  margin: 0 20rpx;
}
.banner-box {
  width: 90%;
  height: 160px;
  position: relative;
  margin: 20rpx auto;
}

.banner-box image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.banner-day {
  position: absolute;
  top: 40rpx;
  left: 60rpx;
  font-size: 48rpx;
  color: #ffffff;
}

.banner-day-num {
  font-size: 88rpx;
}

.banner-word {
  position: absolute;
  bottom: 20rpx;
  left: 60rpx;
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #ffffff;
}

.card-list-title {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin: 20rpx 5%;
  padding: 20rpx 0;

}

.card-title-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.card-title-add .van-icon-plus {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  background-color: #e7e7e7;
  border-radius: 10rpx;
  padding: 6rpx;
}