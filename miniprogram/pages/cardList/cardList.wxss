.popup-img {
  width: 100%;
  text-align: center;
}

.popup-btn {
  position: absolute;
  bottom: 10px;
  width: 100%;
}

.popup-btn button {
  width: 80%;
  margin: 0 auto;
}
.popup-card{
  position: relative;
  width: 595rpx;
  height: 378rpx;
  margin: 0 auto;
  padding: 10rpx;
  box-sizing: border-box;
  color: #eee;
  background-color: #323232;
  border-radius: 20rpx;
}
.popup-bank-logo{
  width:100%;
  height:140rpx
}
.popup-bank-logo .van-skeleton{
  height: 60px;
  align-items: center;
}
.popup-bank-logo .van-skeleton__content{
  padding: 0!important;
}
.popup-bank-logo .van-skeleton__title{
  padding-top: 0;
  height: 20px;
}
.popup-card-footer{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  flex-direction:row;
  padding: 0 10%;
  align-items: center;
  box-sizing: border-box;
  justify-content: space-between;
}
.popup-card-org{
  width: 40%;
  height: 60px;
  text-align: center;

}
.popup-card-org .van-skeleton{
  padding-top: 10px;
}
.popup-card-org .van-skeleton__title{
  height: 30px;
}

.popup-card-num{
  padding-top: 40rpx;
  padding-left: 50rpx;
  width: 100%;
  font-size: 46rpx;
  letter-spacing: 4rpx;
}
.popup-card-billday{
  font-size: 12px;
}