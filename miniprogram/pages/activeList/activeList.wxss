.activity-top image{
width: 100%;
height: 200rpx;
}
.activity-top-name{
  position: absolute;
  top: 10rpx;
  left: 30rpx;
  font-size: 58rpx;
  letter-spacing: 5rpx;
  font-family:'Segoe UI',Tahoma, Geneva, Verdana, sans-serif;
  color: #ffffff;
}

.activity-list-title {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin: 10rpx 5%;
  padding: 20rpx 0;

}

.activity-title-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.activity-title-add .van-icon-plus {
  font-size: 28rpx;
  color: #fff;
  background-color: #3889FF;
  border-radius: 20rpx;
  padding: 8rpx 25rpx;
}
.popup-btn-box {
  margin: 20rpx 0;
  width: 100%;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
}
.popup-btn button{
  width: 40%;
  margin: 0 5%;
}
.activity-box .activity-item {
  background-color: #ffffff;
  box-shadow: 0 5px 10px #eee;
  height: auto;
  width: 90%;
  margin: 0 auto 35rpx auto;
  border-radius: 20rpx;
}
.activity-info{
  padding: 10rpx 20rpx;
  line-height: 40rpx;
  font-size: 26rpx;
}
.activity-info-top{
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
  padding: 20rpx 0;
  margin: 0 20rpx;
}
.activity-info-bankName{
  display: flex;
  align-items: center;
}
.activity-info-bottom{
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
  padding: 20rpx 0;
  margin: 0 20rpx;
}